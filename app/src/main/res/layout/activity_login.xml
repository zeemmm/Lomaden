<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LoginRegisterRelative"
    tools:context=".LoginActivity"
    android:background="@color/whitetobrown"
 >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/baseline_arrow_back"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popinsbold"
            android:text="Welcome back!"/>
    </androidx.appcompat.widget.Toolbar>



    <ImageView
        android:id="@+id/img_3"
        android:layout_width="209dp"
        android:layout_height="196dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:src="@drawable/gambar3" />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_3"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/email"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ofl"
            android:textSize="15dp"
            android:hint="email"/>
        <EditText
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/lock"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ofl"
            android:textSize="15dp"
            android:hint="password"/>

    </LinearLayout>

    <Button
        android:id="@+id/r_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/popinsbold"
        android:text="login"
        android:textSize="18sp" />

</RelativeLayout>